{
    "app-id": "io.github.rinigus.PureMaps",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "io.github.rinigus.PureMaps",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--talk-name=org.osm.scout.server1",
        /* monitor availibility of OSM Scout Server */
        "--talk-name=org.freedesktop.DBus",
        "--socket=pulseaudio",
        /* geoclue support */
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],
    "cleanup": ["/usr/include", "/usr/tests", "/usr/lib/*/libqmapboxgl.a",
                "/usr/lib/libqmapboxgl.a", "/usr/lib/pkgconfig", "/opt",
                "/lib/*.a", "/lib/*.la"],
    "modules": [
        {
            "name": "nemodbus",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "mkdir -p /app/lib/qml",
                "ln -s /app/usr/lib/qml/Nemo /app/lib/qml",
                "ln -s /app/usr/lib/lib* /app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.merproject.org/mer-core/nemo-qml-plugin-dbus/-/archive/2.1.20/nemo-qml-plugin-dbus-2.1.20.tar.gz",
                    "sha256": "d52b97d700ee17e3f20b1dcb84c58502d54d12fcec487a5da22061298f811075"
                }
            ]
        },
        {
            "name": "pyotherside",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "ln -s /app/usr/lib/qml/io /app/lib/qml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thp/pyotherside/archive/1.5.3.tar.gz",
                    "sha256": "00049d5f42cac448368bc2a521edb8de36bb6d2a624e195b7f1004236758b805"
                }
            ]
        },
        {
            "name": "python3-pyxdg",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} pyxdg"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/47/6e/311d5f22e2b76381719b5d0c6e9dc39cd33999adae67db71d7279a6d70f4/pyxdg-0.26.tar.gz",
                    "sha256": "fe2928d3f532ed32b39c32a482b54136fe766d19936afc96c8f00645f9da1a06"
                }
            ]
        },
        {
            "name": "mapbox-gl-native-qt",
            "buildsystem": "simple",
            "build-commands": [
                "cp mapbox-gl-native-lib.pro mapbox-gl-native",
                "qmake mapbox-gl-native/mapbox-gl-native-lib.pro",
                "make INSTALL_ROOT=/app install"
            ],
            "post-install": [
                "ln -s /app/usr/lib/*/libqmapboxgl.so* /app/usr/lib",
                "ln -s /app/usr/lib/libqmapboxgl.so* /app/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/pkg-mapbox-gl-native.git",
                    "branch": "qt-regular",
                    "commit": "0d63f5661ed15d43fbbf0462d82c85e634a2e8d7"
                }
            ]
        },
        {
            "name": "mapbox-gl-qml",
            "buildsystem": "qmake",
            "config-opts": [
                "INCLUDEPATH+=/app/usr/include",
                "LIBS+=-L/app/usr/lib"
            ],
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "ln -s /app/usr/lib/qml/MapboxMap /app/lib/qml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/rinigus/mapbox-gl-qml/archive/1.7.0.tar.gz",
                    "sha256":  "9751c29180aae1fa5ad33031060bc11e6890b41159c831634ccee312d975ea14"
                }
            ]
        },
        {
            "name": "clipboard-qml",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "ln -s /app/usr/lib/qml/Clipboard /app/lib/qml"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/qml-module-clipboard.git",
                    "commit": "47a0aefb515bc53e20028d5eb741a163f73613f3"
                }
            ]
        },
        {
            "name": "qmlrunner",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/qmlrunner.git",
                    "commit": "1ecc5c64fc5bf216bd56f42a5308bd69be4000c3"
                }
            ]
        },
        {
            "name": "mimic1",
            "config-opts": [
                "--with-audio=none"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/MycroftAI/mimic1/archive/1.2.0.2.tar.gz",
                    "sha256": "619f3864d8ff599c1fa47424b7d87059236fcd51db3c0c311eb3635c80174b5a"
                }
            ]
        },
        {
            "name": "pure-maps",
            "buildsystem": "simple",
            "build-commands": [
                "make PREFIX=/app INCLUDE_GPXPY=yes flathub-install-kirigami"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/pure-maps.git",
                    "commit": "7b4c3479bc017f74eec440684e137c30b44aa2f5"
                },
                {
                    "type": "file",
                    "path": "apikeys.py",
                    "dest-filename": "tools/apikeys.py"
                }
            ]
        }
    ]

}
